<script>
 
  $(function() {
  
    $('.trending-tabs-nav ol li:first-child').addClass('active');  
    
  $('.trending-tabs-nav a').click(function() {

    //Check if the tabs menu has active class
    $('.trending-tabs-nav li').removeClass('active');
    $(this).parent().addClass('active');

    // Display active tab
    var currentTrendingTab = $(this).attr('href');
    $('.trending-tabs-content div').hide();
    $(currentTrendingTab).show();

    return false;
  });
});
        
</script>






