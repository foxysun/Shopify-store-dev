<style>
  
.trending-products-mobile{
    display: none;
  }  
.reveal-modal {
  visibility: hidden;
  top: 100px;
  left: 12.5%;
  height: auto;
  margin-left: auto;
  margin-right: auto;
  width: 70%;
  {% if modal_gloss_png != blank %}
  background: #000 url({{ modal_gloss_png }}) no-repeat -200px -80px;
  {% endif %}
  position: absolute;
  z-index: 101;
  padding: 30px 40px 34px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  -moz-box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
  -webkit-box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
  -box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
}

.trending__video {
  height: auto;
  width: 100%%;
}

.trending__video iframe {
  width: 100%;
  height: 100%;
}

#videoModal.reveal-modal .close-reveal-modal {
  font-size: 50px;
  font-weight: 300;
  top: 0;
  right: 0;
  color: red;
  display: block;
  background-color: transparent;
  padding: 10px 10px 25px 10px;
  cursor: pointer;
}

.trending-products-heading {
  font-size: 40px;
  margin-top: 60px;
}
.trending-products-heading::after {
  content: "";
  border-bottom: none;
}

.product-feature__content {
  display: flex;
  justify-content: center;
  background-color: #eaeaea;
  align-items: center;
}

.product-feature__content--image {
  width: 67%;
  margin-right: 0;
}

.product-feature__content--image img {
  width: 100%;
}

/* Tabs Nav styles*/

.trending-tabs-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin: 0 0 0 0;
  padding: 0 0 0 0;
  background-color: #f7f7f7;
}

#trending-tabsContainer {
  width: 100%;
}
.trending-tabs-nav {
  width: 30%;
}

.trending-tabs-nav ol {
  padding: 0;
  width: auto;
  text-align: left;
  list-style-type: decimal-leading-zero;
  padding-left: 25%;
  font-family: "Oswald", sans-serif;
}

.trending-tabs-nav li {
  border-width: 0 0 0 0;
  text-align: left;
  font-size: 24px;
  margin-bottom: 45px;
}

.trending-tabs-nav li a {
  padding: 0;
  font-weight: bold;
  color: #999999;
  text-transform: uppercase;
  font-size: 24px;
  text-align: left;
  font-family: "Oswald", sans-serif;
}
/* Tabs Active state styles*/


.trending-tabs-nav li.active a {
  color: #333;
  border-bottom: 3px solid #e71c39;
}

/*Tabs Content styles*/

.trending-tabs-content {
  {% comment %} padding: 10px; {% endcomment %}
  background: #fff;
  margin-top: -1px;
  overflow: hidden;
}

.trending-tabs-content img {
  {% comment %} margin-right: 10px; {% endcomment %}
  visibility: hidden;
}
/* Hide All the content divs EXCEPT the first one */

.trending-tabs-content div:not(:first-child) {
  display: none;
}

.trending-tab-content span {
  display: block;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}
.trending-tab-content {
  display: flex;
  align-items: center;
}
.trending-tabs-content {
  width: 70%;
}

.trending-tab-content-image img {
  width: 100%;
}

.trending-tab-content {
  display: flex;
  align-items: stretch;
}

.trending-tab-content-image {
  width: 50%;
  position: relative;
}

.trending-tab-content-video {
  width: 50%;
  position: relative;
}

.trending-tab-content-button.btn {
  position: absolute;
  bottom: 0;
  right: 0;
  text-align: center;
  font-size: 21px;
  background-color: #fff;
  border: none;
  padding: 5px 30px;
  font-family: "Oswald", sans-serif;
  margin: 0 0 0 0;
  display: flex;
  align-items: center;
  border: 2px solid #E71C39;
}
.trending-tab-content-button.btn:hover {
  background-color: #e71c39;
  color: #fff;
}

.trending-tab-content-button::after {
  content: "+";
  display: inline-block;
  padding-left: 15px;
  font-size: 36px;
}

.trending-tab-content-video-button.btn {
  position: absolute;
  bottom: 0;
  right: 0;
  text-align: center;
  font-size: 21px;
  background-color: #e71c39;
  color: #fff;
  border: none;
  font-family: "Oswald", sans-serif;
  padding: 0 40px 0 40px;
  line-height: 50px;
  {% comment %} margin: 0 0 0 0;
  display: flex;
  align-items: center;
  color: #fff;
  display: flex;
  justify-content: space-between;
  width: 200px;
  height: 60px;
  padding: 0 0 0 0;
  text-indent: 70px; {% endcomment %}
}

.trending-tab-content-video-button.btn i {
  padding-left: 25px;
}
{% comment %} .trending-tab-content-video-button.btn::after {
  content: " ";
  background-repeat: no-repeat;
  display: inline-block;
  background-color: #e71c39;
  width: 60px;
  height: 60px;
  background-image: url("{{ 'icon-triangle-red.svg' | asset_url  }}");
  background-size: 30px 30px;
  background-position: center;
} {% endcomment %}

.trending-tab-content-video-button.btn:hover {
  text-shadow: 0.075em 0.08em 0.1em rgba(0, 0, 0, 1);
}
  
.product-price{
  font-weight: 300;
  font-size: 18px;
  display: inline-block;
  padding-left: 10px;
  color: #666;
}

  
