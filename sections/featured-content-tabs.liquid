				},
				{
					"id": "tab-content-description-heading",
					"type": "text",
					"label": "Content Description Heading"
				},
				{
					"id": "tab-content-description-copy",
					"type": "textarea",
					"label": "Content Description Heading"
				},
				{
					"id": "tab-button-text",
					"type": "text",
					"label": "Button Text"
				},
		
				{
					"id": "tab-button-link",
					"type": "url",
					"label": "Button Link"
				}

			]
		}
  
	]
}

{% endschema %}

