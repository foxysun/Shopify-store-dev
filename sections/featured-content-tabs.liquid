				},
       			{
                  "type": "text",
                  "id": "tab-content-heading-black",
                  "label": "Content Heading (black)"
                },

				{
				  "id": "tab-content-heading-red",
				  "type": "text",
				  "label": "Content Heading (red)"
				},
				{
				  "id": "tab-content-image",
				  "type": "image_picker",
				  "label": "Content Image"
				},
				{
				  "id": "tab-content-image-alt",
				  "type": "text",
