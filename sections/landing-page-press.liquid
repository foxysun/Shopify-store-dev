  {
    "name": "Press Mentions",
	"settings" : [
		{
			"type":"text",
			"id" : "press_mentions_title",
			"label" : "Title for Press Mentions Section"
		}
	],
	"blocks":[
	{
		"type": "select",
		"name" : "Add Press Logo",

    	"settings": [
          {
              "id": "press-logo",
