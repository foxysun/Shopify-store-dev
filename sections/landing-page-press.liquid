          },
          {
              "id": "press-logo-alt",
              "type": "text",
              "label": "Press Logo Alt Text"
          },
          {	
              "id": "press-link",
              "type": "url",
              "label": "Link to article"
          }

		]
	 }
  
	]
}

{% endschema %}

