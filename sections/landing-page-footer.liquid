        <div class="landing-page__lower-footer--item-payment-methods">
          <img src="{{ 'amex.svg' | asset_url  }}" class="landing-page__lower-footer--item-payment-method" />
          <img src="{{ 'discover.svg' | asset_url  }}" class="landing-page__lower-footer--item-payment-method" />
          <img src="{{ 'master-card.svg' | asset_url  }}" class="landing-page__lower-footer--item-payment-method" />
